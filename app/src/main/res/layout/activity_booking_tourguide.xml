<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background_gradient"
    tools:context=".view.activity.BookingTourguideActivity">

    <LinearLayout
        android:layout_marginTop="15dp"
        android:id="@+id/layoutBooking"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_white"
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_tgl_tour"
            android:paddingTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal Tour"
            android:textColor="@color/colorBlack"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleTint="@color/colorBlack"
            app:passwordToggleEnabled="true">
            <EditText
                android:id="@+id/et_tgl_tour"
                android:drawablePadding="20dp"
                android:paddingRight="10dp"
                android:drawableRight="@drawable/ic_person"
                android:hint="Tanggal tour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/tv_waktu_tour"
            android:paddingTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waktu Tour"
            android:textColor="@color/colorBlack"/>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleTint="@color/colorBlack"
            app:passwordToggleEnabled="true">
            <EditText
                android:id="@+id/et_waktu_tour"
                android:drawablePadding="20dp"
                android:paddingRight="10dp"
                android:drawableRight="@drawable/ic_email"
                android:hint="waktu tour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="time"/>
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/tv_lokasi_temu"
            android:paddingTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lokasi Temu"
            android:textColor="@color/colorBlack"/>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleTint="@color/colorBlack"
            app:passwordToggleEnabled="true">
            <EditText
                android:id="@+id/et_lokasi_temu"
                android:drawablePadding="20dp"
                android:paddingRight="10dp"
                android:drawableRight="@drawable/ic_email"
                android:hint="Lokasi bertemu tourguide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"/>
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btn_booking_tourguide"
            android:textColor="#FFF"
            android:background="@drawable/rec_gradient_green"
            android:layout_marginTop="30dp"
            android:textAllCaps="false"
            android:text="Pesan Tour Guide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>