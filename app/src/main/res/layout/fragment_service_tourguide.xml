<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/background_gradient"
    tools:context=".ServiceTourguideFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/padding_master">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Service Tour"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:textSize="24dp"
            android:textAlignment="center" />

        <ImageButton
            android:id="@+id/ib_edit_service_tour"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:adjustViewBounds="true"
            android:background="@drawable/circle_blue_sky"
            android:src="@drawable/ic_settings_white" />
    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kota Tour"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/tv_kota_tourguide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:background="@drawable/input_data"
                    android:text="@string/surakarta"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:textSize="18sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/grey" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Harga Tour"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/tv_harga_tourguide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:background="@drawable/input_data"
                    android:text="Rp 100.000"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:textSize="18sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/grey" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hari_tour"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/tv_hari_tourguide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:background="@drawable/input_data"
                    android:text="Senin, Selasa, Rabu, Kamis, Jumat, Sabtu, Minggu"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:textSize="18sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/grey" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Topik Tour"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/tv_topik_tourguide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:background="@drawable/input_data"
                    android:text="Wisata Alam, Sejarah, Kuliner, Kesenian, Lainnya"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:textSize="18sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/grey" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fasilitas"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/tv_fasilitas_tourguide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:background="@drawable/input_data"
                    android:text="Jalan Kaki, Sepeda Motor, Mobil, Kapal, Lainnya"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:textSize="18sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/grey" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bahasa Tourguide"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/tv_bahasa_tourguide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:background="@drawable/input_data"
                    android:text="Bahasa Indonesia, Inggris, Spanyol, Perancis, Korea, Thailand, Jepang, China, Lainnya"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:textSize="18sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/grey" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_marginBottom="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/deskripsi_tour"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/tv_deskripsi_tour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:background="@drawable/input_data"
                    android:text="Saya adalah mahasiswa di surakarta, saya bisa mengajak anda mengunjungi berbagai daerah wisata di surakarta."
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>