<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rec_gradient_blue"
    android:orientation="vertical"
    tools:context=".EditServiceTourFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/padding_master">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/edit_service_tour"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:textSize="24dp"
            android:textAlignment="center" />
    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="31dp"
                    android:text="Pilih Kota Tour"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp" />
                <EditText
                    android:id="@+id/et_kota_tourguide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:background="@drawable/input_data"
                    android:text="@string/surakarta"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:textSize="18sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/grey" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tetapkan Harga Tour"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp" />
                <EditText
                    android:id="@+id/et_harga_tourguide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:background="@drawable/input_data"
                    android:text="Rp 100.000"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:textSize="18sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/grey" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pilih Hari Tour"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingRight="5dp">
                        <CheckBox
                            android:id="@+id/cb_hari_senin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Senin"/>
                        <CheckBox
                            android:id="@+id/cb_hari_selasa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Selasa"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingRight="5dp">
                        <CheckBox
                            android:id="@+id/cb_hari_rabu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Rabu"/>
                        <CheckBox
                            android:id="@+id/cb_hari_kamis"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Kamis"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingRight="5dp">
                        <CheckBox
                            android:id="@+id/cb_hari_jumat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Jumat"/>
                        <CheckBox
                            android:id="@+id/cb_hari_sabtu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sabtu"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/cb_hari_minggu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingRight="5dp">
                        <CheckBox
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Minggu"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/grey" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pilih Topik Tour"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:paddingRight="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <CheckBox
                            android:id="@+id/cb_topik_wisata_alam"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Wisata Alam"/>
                        <CheckBox
                            android:id="@+id/cb_topik_sejarah"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sejarah"/>
                    </LinearLayout>
                    <LinearLayout
                        android:paddingRight="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <CheckBox
                            android:id="@+id/cb_topik_seni"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Seni dan Budaya"/>
                        <CheckBox
                            android:id="@+id/cb_topik_olahraga"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Wisata Kuliner"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <CheckBox
                            android:id="@+id/cb_topik_wisata_kuliner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Olahraga"/>
                        <CheckBox
                            android:id="@+id/cb_topik_lainnya"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Lainnya"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/grey" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pilih Fasilitas Tour"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:paddingRight="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <CheckBox
                            android:id="@+id/cb_fasilitas_jalan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Jalan Kaki"/>
                        <CheckBox
                            android:id="@+id/cb_fasilitas_sepeda"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sepeda"/>
                    </LinearLayout>
                    <LinearLayout
                        android:paddingRight="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <CheckBox
                            android:id="@+id/cb_fasilitas_sepeda_motor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sepeda Motor"/>
                        <CheckBox
                            android:id="@+id/cb_fasilitas_mobil"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mobil"/>
                    </LinearLayout>
                    <LinearLayout
                        android:paddingRight="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <CheckBox
                            android:id="@+id/cb_fasilitas_kapal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Kapal"/>
                        <CheckBox
                            android:id="@+id/cb_fasilitas_lainnya"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Lainnya"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/grey" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pilih Bahasa Anda"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:paddingRight="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <CheckBox
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Bahasa Indonesia"/>
                        <CheckBox
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Inggris"/>
                        <CheckBox
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Spanyol"/>
                    </LinearLayout>
                    <LinearLayout
                        android:paddingRight="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <CheckBox
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Perancis"/>
                        <CheckBox
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Korea"/>
                        <CheckBox
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Thailand"/>
                    </LinearLayout>
                    <LinearLayout
                        android:paddingRight="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <CheckBox
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Jepang"/>
                        <CheckBox
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="China"/>
                        <CheckBox
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Lainnya"/>
                    </LinearLayout>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/grey" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tuliskan Deskripsi Tour Anda"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/tv_deskripsi_tour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:background="@drawable/input_data"
                    android:text="Saya adalah mahasiswa di surakarta, saya bisa mengajak anda mengunjungi berbagai daerah wisata di surakarta."
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:paddingBottom="50dp"
                android:gravity="center_horizontal">
                <Button
                    android:id="@+id/btn_batal"
                    android:text="Batal"
                    android:textColor="@color/colorWhite"
                    android:textAllCaps="false"
                    android:textSize="20dp"
                    android:layout_marginEnd="50dp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rec_gradient_warning"/>
                <Button
                    android:id="@+id/btn_simpan"
                    android:text="Simpan"
                    android:textColor="@color/colorWhite"
                    android:textAllCaps="false"
                    android:textSize="20dp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rec_gradient_green" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</LinearLayout>